<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/top_bar_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="64dp">
        <ImageView
            android:id="@+id/all_inclusive"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_all_inclusive"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/description_all_inclusive"
            app:tint="@color/color_accent"/>
        <ImageView
            android:id="@+id/smile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_smile"
            android:contentDescription="@string/description_smile"
            app:tint="@color/color_accent" />
        <ImageView
            android:id="@+id/sunny"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_sunny"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/description_sunny"
            app:tint="@color/color_accent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar_menu"
        android:padding="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="OlÃ¡, Name!"/>
        <TextView
            android:id="@+id/text_message_motivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Message"/>
        <View
            android:layout_width="164dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_message_motivation"
            android:layout_marginTop="32dp"
            android:background="@color/color_secondary" />
        <Button
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Nova frase"
            android:textAllCaps="true"
            app:cornerRadius="4dp"/>
    </RelativeLayout>
</RelativeLayout>